{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/@types/*",
                "node_modules/*",
                "../*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "node_modules",
            "../"
        ],
        "types": [],
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "experimentalDecorators": true
    },
    "files": [
        "index.d.ts",
        "react-i18next-tests.tsx"
    ]
}
