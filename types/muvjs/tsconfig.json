{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "module": "es6",
        "target": "es5",
        "lib": [
            "es2019",
            "dom"
        ],
        "allowJs": true,
        "checkJs": true,
        "baseUrl": "types",
        "typeRoots": [
            "types"
        ]
    },
    "files": [
        "muv.d.ts",
        "muv-dom.d.ts",
        "muvjs-tests.ts"
    ]
}
