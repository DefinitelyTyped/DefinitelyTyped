{
	"extends": "dtslint/dt.json",
	"rules": {
		"align": [false],
		"class-name": true,
		"indent": [true, "tabs"],
		"interface-name": [true, "never-prefix"],
		"jsdoc-format": true,
		"linebreak-style": [true, "LF"],
		"max-line-length": [true, 100],
    "no-any": [false],
		"no-single-declare-module": [false],
		"quotemark": [true, "double", "avoid-escape"],
		"trailing-comma": [true, {
			"multiline": { "objects": "always", "arrays": "always", "functions": "never" },
			"singleline": { "objects": "never", "arrays": "never", "functions": "never" }
		}],
		"unified-signatures": [false],
		"variable-name": [false],
		"whitespace": [true, "check-branch", "check-decl", "check-operator",
			"check-module", "check-separator", "check-rest-spread", "check-preblock" ]
	}
}
