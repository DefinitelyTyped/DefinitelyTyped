{
    "compilerOptions": {
        "target": "ES5",
        "moduleResolution": "node",
        "module": "none",
        "lib": [
            "es6"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": "../",
        "typeRoots": [
            ".",
            "../",
            "../../node_modules/"
        ],
        "types": ["node"],
        "noEmit": true,
        "forceConsistentCasingInFileNames": true
    },
    "files": [
        "index.d.ts",
        "clearbladejs-server-tests.ts",
        "global.d.ts"
    ],
    "exclude": [
        "**/clearbladejs-client/*",
        "**/clearbladejs-node/*"
    ]
}