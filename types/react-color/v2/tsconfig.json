{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es6",
            "dom"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": "../../",
        "typeRoots": [
            "../../"
        ],
        "types": [],
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "paths": {
            "react-color": [
                "react-color/v2"
            ],
            "react-color/*": [
                "react-color/v2/*"
            ]
        }
    },
    "files": [
        "index.d.ts",
        "react-color-tests.tsx"
    ]
}
