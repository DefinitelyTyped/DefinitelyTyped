{
    "files": [
        "index.d.ts",
        "test/react-dom-tests.tsx"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es6",
            "dom"
        ],
        "paths": {
            "react": [
                "react/v17"
            ],
            "react-dom": [
                "react-dom/v17"
            ],
            "react-dom/*": [
                "react-dom/v17/*"
            ]
        },
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": "../../",
        "typeRoots": [
            "../../"
        ],
        "types": [],
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve"
    }
}
