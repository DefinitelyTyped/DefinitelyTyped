{
    "extends": "@definitelytyped/dtslint/dt.json",
    "rules": {
        "jsdoc-format": false,
        "no-return-await": false,
        "only-arrow-functions": false,
        "prefer-const": false,
        "npm-naming": [
            true,
            {
                "mode": "code",
                "errors": [
                    [
                        "NoDefaultExport",
                        false
                    ]
                ]
            }
        ]
    }
}
