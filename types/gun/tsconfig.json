{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": "../",
        "typeRoots": [
            "../"
        ],
        "types": [],
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        // According to https://gun.eco/docs/Installation
        // Even you use ES import, this lib will also create a global binding.
        "allowUmdGlobalAccess": true,
        "esModuleInterop": true
    },
    "files": [
        "index.d.ts",
        "gun.d.ts",
        "gun-api-validation.ts",
        "gun-api-doc-test.ts",
        "lib/radisk.d.ts"
    ]
}
