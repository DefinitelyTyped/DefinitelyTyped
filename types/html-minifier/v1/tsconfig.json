{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": "../../",
        "typeRoots": [
            "../../"
        ],
        "paths": {
            "html-minifier": [
                "html-minifier/v1"
            ],
            "html-minifier/*": [
                "html-minifier/v1/*"
            ],
            "uglify-js": [
                "uglify-js/v2"
            ],
            "clean-css": [
                "clean-css/v3"
            ],
            "clean-css/*": [
                "clean-css/v3/*"
            ]
        },
        "types": [],
        "noEmit": true,
        "forceConsistentCasingInFileNames": true
    },
    "files": [
        "index.d.ts",
        "html-minifier-tests.ts"
    ]
}
