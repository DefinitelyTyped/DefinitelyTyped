{
    "compilerOptions": {
        "module"                          : "commonjs",
        "lib"                             : [
            "es6"
        ],
        "noImplicitAny"                   : true,
        "noImplicitThis"                  : true,
        "strictFunctionTypes"             : true,
        "strictNullChecks"                : true,
        "baseUrl"                         : "../",
        "typeRoots"                       : [
            "../"
        ],
        "paths"                           : {
            "@nick-thompson/*": [
                "nick-thompson__*"
            ]
        },
        "noEmit"                          : true,
        "forceConsistentCasingInFileNames": true
    },
    "files"          : [
        "index.d.ts",
        "test/test.ts"
    ]
}
